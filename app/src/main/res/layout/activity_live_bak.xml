<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.peisp.activity.LiveActivity">

    <include
        android:id="@+id/includeLayout"
        layout="@layout/titlebar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/includeLayout"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingTop="25dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp"
                app:columnCount="4"
                app:orientation="horizontal"
                app:rowCount="3">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:gravity="center_vertical"
                    android:text="机位选择"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_columnSpan="4" />

                <RelativeLayout
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/button_circle_shape_dark"
                    app:layout_columnWeight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机位A"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/button_circle_shape"
                    app:layout_columnWeight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机位B"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/button_circle_shape"
                    app:layout_columnWeight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机位C"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button6"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_circle_shape"
                    app:layout_columnWeight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机位D"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button7"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/button_circle_shape"
                    app:layout_columnWeight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机位E"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button8"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/button_circle_shape"
                    app:layout_columnWeight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机位F"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"></TextView>

                </RelativeLayout>

            </androidx.gridlayout.widget.GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="false"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="11dp"
                    android:gravity="center_vertical"
                    android:text="实时监控"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@id/textView10"
                    android:layout_alignBottom="@id/textView10"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="33dp"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@mipmap/shuaxin" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <com.dou361.ijkplayer.widget.IjkVideoView
                    android:id="@+id/mVideo"
                    android:layout_width="375dp"
                    android:layout_height="220dp"
                    android:background="@drawable/radiobutton_background_checked" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <com.qingmei2.library.SlideBottomLayout
        android:id="@+id/slideLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        app:handler_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/material_deep_teal_20">

                <TextView
                    android:id="@+id/tv_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="人工视察模式"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_switch"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/repeat" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/drawerContent"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/handle"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/zuo_b" />

                <ImageButton
                    android:id="@+id/btn_run_or_stop"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/play_outline_b" />

                <ImageButton
                    android:id="@+id/btn_right"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/you_b" />

            </LinearLayout>
        </LinearLayout>

    </com.qingmei2.library.SlideBottomLayout>
</RelativeLayout>