<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="317dp"
            android:layout_marginRight="317dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="18dp"
            android:text="员工违规记录"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatars"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="18dp"
            android:src="@mipmap/cygb">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatars"
            android:layout_alignBottom="@id/avatars"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/avatars"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="向文波·机床操作员"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:alpha="0.75"
                android:text="工号：cyg12345609"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_check"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/avatars"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:gravity="center"
            android:background="@drawable/execute_button_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理"
                android:textColor="@color/white"
                android:textSize="12sp"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="违规类型"
                android:textSize="14sp"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView29"
                android:layout_alignBottom="@id/textView29"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/edit_shape"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="  未佩戴安全帽"
                android:textColor="@color/text_black" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignTop="@id/textView29"
                android:layout_alignBottom="@id/textView29"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-55dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/editText"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@mipmap/xiugai" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="违规时间"
                android:textSize="14sp"
                android:textColor="@color/text_black"  />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView30"
                android:layout_alignBottom="@id/textView30"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/edit_shape"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="  2020-03-01 13:01"
                android:textColor="@color/text_black" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignTop="@id/textView30"
                android:layout_alignBottom="@id/textView30"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-55dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@id/editText2"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@mipmap/xiugai" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="35dp"
        android:paddingEnd="90dp"
        android:layout_marginBottom="70dp">

        <ImageView
            android:id="@+id/iv_ill_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/result" />

    </RelativeLayout>

</LinearLayout>